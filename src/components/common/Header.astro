---
const runtime = Astro.locals.runtime
const env = runtime ? runtime.env.ENVIRONMENT : "staging"

import Container from "../../layouts/Container.astro";
---

<section class={`z-10 fixed top-0 left-0 w-full bg-white ${env === "staging" && "mt-10" }`}>
	<Container>
		<nav class="flex justify-between items-center py-2">
			<img src="/logo.png" alt="Logo" />
			<button class="text-white hover:text-black p-4 bg-green-700 rounded transition duration-300">Start a Project</button>
		</nav>
	</Container>	
</section>